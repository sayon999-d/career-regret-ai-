# SERVER SETTINGS
HOST=0.0.0.0
PORT=8000
DEBUG=false

# OLLAMA / LLM SETTINGS (Local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120

# DATABASE
DATABASE_URL=sqlite+aiosqlite:///./career_regret.db

# SECURITY SETTINGS
JWT_SECRET_KEY=CHANGE_ME_TO_A_SECURE_64_CHARACTER_SECRET_KEY_12345

# Admin password - set a strong password
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_PASSWORD=CHANGE_ME_TO_A_SECURE_ADMIN_PASSWORD

# Token expiry (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS SETTINGS
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# RATE LIMITING
RATE_LIMIT_RPM=30
RATE_LIMIT_RPH=500

# IP SECURITY
# Comma-separated list of blocked IPs
IP_BLACKLIST=

# Comma-separated list of whitelisted IPs (bypasses rate limiting)
IP_WHITELIST=127.0.0.1,::1

# IPs trusted to provide X-Forwarded-For headers (your reverse proxy)
TRUSTED_PROXIES=127.0.0.1

# BRUTE FORCE PROTECTION
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# API KEYS
# Whether to return API keys in login response (disable for web-only apps)
ENABLE_API_KEYS=false

# CACHE SETTINGS
CACHE_MAX_SIZE=500
CACHE_TTL=300

# MODEL / ML SETTINGS
MODEL_PATH=./models
ML_LEARNING_RATE=0.001
ENSEMBLE_DL_WEIGHT=0.7
ENSEMBLE_ML_WEIGHT=0.3

# RAG / EMBEDDINGS
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2